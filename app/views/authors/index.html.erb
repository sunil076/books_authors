<p id="notice"><%= notice %></p>
<div class="table">
  <%= link_to "Books", books_path %>

  <h1>Authors</h1>

  <table>
    <thead>
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th colspan="3">CRUD Operations</th>
      </tr>
    </thead>

    <tbody>
      <% @authors.each do |author| %>
        <tr>
          <td><%= author.first_name %></td>
          <td><%= author.last_name %></td>
          
        
          <td><button class="show"><%= link_to 'Show', author %></button></td>
          <td><button class="edit"><%= link_to 'Edit', edit_author_path(author) %></button></td>
          <td><button class="destroy"><%= link_to 'Destroy', author, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <button class="new"><%= link_to 'New Author', new_author_path %></button>
</div>